{{>header}}
{{>navbar}}
<section class="container my-3">
    <div class="text-right">
        <a href="/deletAll" class="btn btn-danger my-3">Delete All</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <th>#</th>
            <th>name</th>
            <th>age</th>
            <th>email</th>
            <th>Cuntry</th>
            <th>City</th>
            <th>Balance</th>
            <th>Actions</th>

        </thead>
        <tbody>
{{#if noData}}            
        <tr>No users yet</tr>  
        {{else}}
{{#each allUser}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.age}}</td>
                <td>{{this.email}}</td>
                <td>{{this.cuntry}}</td>
                <td>{{this.city}}</td>
                <td>{{this.balance}}</td>
                <td>
                    <a href="/withdrow/{{this.id}}" class="btn btn-warning mx-2">Withdrow</a>
                    <a href="/single/{{this.id}}" class="btn btn-primary mx-2">show</a>
                    <a href="/delet/{{this.id}}" class="btn btn-danger mx-2">delete</a>
                </td>
            </tr>
{{/each}}
{{/if}}            
        </tbody>
    </table>
</section>
{{>footer}}